{% extends 'base.html.twig' %}

{% block navbar %}

    <div id="header-index">
        <h1>Go Fest</h1>
        <a href="{{ path('homepage') }}" class="brand-logo">
            <img src="{{ asset('img/logorondblanc.png') }}">
        </a>
        <!--Tablet + Desktop -->
        <a href="{{ path('fos_user_security_login') }}" class="btn right hide-on-med-and-up">Log In</a>
        <a href="{{ path('fos_user_registration_register') }}" class="btn right hide-on-med-and-up">Register</a>
        <!--Mobile -->
        <a href="{{ path('fos_user_security_login') }}" class="waves-effect waves-light btn-large hide-on-small-only">Log In</a>
        <a href="{{ path('fos_user_registration_register') }}" class="waves-effect waves-light btn-large hide-on-small-only">Register</a>
    </div>

{% endblock %}

{% block body %}

    <div id="fullpage">
        <section class="mobile-homepage">
            <img class="homepage-img hide-on-med-and-up" src="{{ asset('img/tomorrowland.jpg') }}">
            <a href="{{ path('discover') }}"><h2 class="homepage-h2">Discover</h2></a>
        </section>
        <section class="mobile-homepage">
            <img class="homepage-img hide-on-med-and-up" src="{{ asset('img/coachella.jpg') }}">
            <a href=""><h2 class="homepage-h2">Plan</h2></a>
        </section>
        <section class="vertical-scrolling  hide-on-small-only" id="section0">
            <a href="{{ path('discover') }}">
                <video id="video" playsinline="" autoplay muted loop class="bgvid">
                    <source src="{{ asset('video/coachella.mp4') }}" type="video/mp4">
                </video>
                <div class="ml-gradient">
                    <h2 class="homepage-h2">Discover</h2>
                    <ul id="menu">
                        <li data-menuanchor="secondPage"><a href="#secondPage"><i class="material-icons icon">keyboard_arrow_down</i></a>
                        </li>
                    </ul>
                </div>
            </a>
        </section>

        <section class="vertical-scrolling hide-on-small-only" id="section1">
            <a href="#">
                <video id="video2" playsinline="" autoplay muted loop class="bgvid">
                    <source src="{{ asset('video/tomorrowland.mp4') }}"
                            type="video/mp4">
                </video>

                <div class="ml-gradient">
                    <a href="{{ path('roulette') }}"><h2 id="second" class="homepage-h2">Roulette</h2></a>
                    <ul id="menu">
                        <li data-menuanchor="firstPage" class="active"><a href="#firstPage"><i class="material-icons icon">keyboard_arrow_up</i></a>
                        </li>
                    </ul>
                </div>
            </a>
        </section>
    </div>

{% endblock %}

{% block footer %}

    <footer id="footer">
        <p>Footer</p>
    </footer>

{% endblock %}

{% block javascripts %}

    <script src="{{ asset('js/script.js') }}"></script>
    <script>
        document.querySelector('#video').play();
    </script>

{% endblock %}