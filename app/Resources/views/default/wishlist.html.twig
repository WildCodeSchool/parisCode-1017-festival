{% extends 'base.html.twig' %}

{% block stylesheets %}

    <link rel="stylesheet" type="text/css" href="{{ asset('css/stylediscover.css') }}">

{% endblock %}

{% block body %}

    <div class="container container-top">

        <div class="row center-align">
            <div class="col s12">
                <h2>Wishlist</h2>
            </div>
        </div>

        <!-- Materialize Collections - Wishlists -->
        <div class="row">
            <div class="col s12">

                <ul class="collection with-header">
                    <li class="collection-header"><h4>Genres</h4></li>
                    {% for genre in genres %}
                        <li class="collection-item"><div>{{ genre.name }}<a href="#" class="secondary-content"><i class="material-icons">grade</i></a></div></li>
                    {% endfor %}
                </ul>

                <ul class="collection with-header">
                    <li class="collection-header"><h4>Artists</h4></li>
                    {% for artist in artists %}
                        <li class="collection-item"><div>{{ artist.name }}<a href="#" class="secondary-content"><i class="material-icons">grade</i></a></div></li>
                    {% endfor %}
                </ul>

                <ul class="collection with-header">
                    <li class="collection-header"><h4>Locations</h4></li>
                    {% for location in locations %}
                        <li class="collection-item"><div>{{ location.address }}<a href="#" class="secondary-content"><i class="material-icons">grade</i></a></div></li>
                    {% endfor %}
                </ul>


                    <li class="collection-item"><a href="#">Festivals</a></li>
                    <li class="collection-item"><a href="#">Concerts</a></li>

                <div class="row center-align">
                    <div class="input-field col s12">
                        <button class="btn waves-effect waves-light" type="submit" name="action">Send
                            <i class="material-icons right">send</i>
                        </button>
                    </div>
                </div>

            </div>
        </div>

    </div>

{% endblock body %}

{% block javascripts %}

    <script src="https://use.fontawesome.com/a4cc06d132.js"></script>
    <script type="text/javascript" src="{{ asset('js/scriptform.js') }}"></script>

{% endblock javascripts %}