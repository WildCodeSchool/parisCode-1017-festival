{% extends 'base.html.twig' %}

{% block stylesheets %}

    <link rel="stylesheet" type="text/css" href="{{ asset('css/styleform.css') }}">

{% endblock %}

{% block body %}

<div class="container">

    <div class="row center-align">
        <div class="col s12">
            <h2>Contact Us</h2>
        </div>
    </div>

    <div class="row">
        <form class="col s12">

            <!-- Choix du sujet-->
            <div class="row">
                <div class="input-field col s12">
                    <i class="material-icons prefix">question_answer</i>
                    <select>
                        <option value="" disabled selected>Choose your subject</option>
                        <option value="1">Subject 1</option>
                        <option value="2">Subject 2</option>
                        <option value="3">Subject 3</option>
                    </select>
                    <label>Subject</label>
                </div>
            </div>

            <!-- Message-->
            <div class="row">
                <div class="input-field col s12">
                    <i class="material-icons prefix">announcement</i>
                    <textarea id="textarea" class="materialize-textarea" data-length="300"></textarea>
                    <label for="icon_prefix">Your Message</label>
                </div>
            </div>

            <!-- Envoyer-->
            <div class="row">
                <div class="col s12 center-align">
                    <button class="btn waves-effect waves-light" type="submit" name="action">Submit
                        <i class="material-icons right">send</i>
                    </button>
                </div>
            </div>

        </form>
    </div>

</div>

{% endblock body %}

{% block javascripts %}

    <script src="https://use.fontawesome.com/a4cc06d132.js"></script>
    <script type="text/javascript" src="{{ asset('js/scriptform.js') }}"></script>

{% endblock javascripts %}
