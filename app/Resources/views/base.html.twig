    <body>

    {% block navbar %}
        <nav id="header">
            <div class="nav-wrapper">
                <h1>Go Fest</h1>
                <a href="{{ path('discover') }}" class="brand-logo"><img src="{{ asset('img/logorondblanc.png') }}"></a>
                <a href="#" data-activates="mobile-demo" class="button-collapse"><i class="material-icons">menu</i></a>
                <ul class="right hide-on-med-and-down">
                    <li><a href="{{ path('register') }}">Register</a></li>
                    <li><a href="{{ path('login') }}">Log In</a></li>
                    <li><a href="{{ path('user_account') }}">My profile</a></li>
                    <li><a href="{{ path('festival_new') }}">+ Add Fest</a></li>
                </ul>
                <ul class="side-nav" id="mobile-demo">
                    <li><a href="{{ path('register') }}">Register</a></li>
                    <li><a href="{{ path('login') }}">Log In</a></li>
                    <li><a href="{{ path('user_account') }}">My profile</a></li>
                    <li><a href="{{ path('festival_new') }}">+ Add Fest</a></li>
                </ul>
            </div>
        </nav>
    {% endblock %}

    {% block body %}
    {% endblock %}

    {% block footer %}
        <footer id="footer">
            <p>Footer</p>
        </footer>
    {% endblock %}

        <script type="text/javascript" src="https://code.jquery.com/jquery-3.2.1.min.js"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/fullPage.js/2.6.6/jquery.fullPage.min.js"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/0.100.2/js/materialize.min.js"></script>
        <!-- js burger -->
        <script>
            $( document ).ready(function(){
                $(".button-collapse").sideNav();
            })
        </script>

    {% block javascripts %}
    {% endblock %}

